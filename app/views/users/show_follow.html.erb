<div class="main">
<div class="card padding-md">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= link_to image_tag(@user.image.url(:small)), @user.image.url %>
      <h1><%= @user.username %></h1>
      <span><%= link_to t(".content7"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.image.url(:verysmall)),
              user.image.url %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
</div>
</div>
