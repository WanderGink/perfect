<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6">
<div class="card padding-md margin-top-md m-b-md">
<h2 class="text-center"><%= t ".title" %><%= resource_name.to_s.humanize %></h2>

<%= form_for resource, as: resource_name,
  url: registration_path(resource_name), html: {method: :put} do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: t("femail"),
      class: "form-control", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
      <%= t ".content13" %><%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: t("fpass"),
      class: "form-control", autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br>
      <em>
        <%= @minimum_password_length %><%= t ".content22" %>
      </em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: t("fpass"),
      class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %>
    <%= f.password_field :current_password,
      class: "form-control", placeholder: t("fnpass"), autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit t(".submit"), class: "btn btn-success btn-block" %>
  </div>
<% end %>

<%= link_to t(".linkto"), root_path, class: "btn btn-warning" %>
</div>
</div>
<div class="col-md-3"></div>
</div>
