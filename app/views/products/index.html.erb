<div class="row">
  <div class="main">
    <%= link_to t("sell_product"), new_product_path,
      class: "btn btn-success" %>
    <br>
    <div class="row">
    <% if @products.present? %>
      <% @products.each do |product| %>
      <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="card">
          <%= image_tag product.product_image.url(:thumb),
            class: "card-img-top" %>
          <div class="card-block">
            <h5 class="card-title text-bold"><%= product.title %></h5>
            <div class="meta">
              <%= link_to product.user.username, "#" %>
            </div>
            <h5 class="card-text">
              <%= number_to_currency product.price %>
            </h5>
            <%= link_to t("add_to_cart"), "#", class: "btn btn-danger" %>
          </div>
          <% if current_user.username == product.user.username %>
          <div class="card-footer">
            <%= link_to product_path(product),
              class: "btn btn-sm btn-info" do %>
              <i class="ion ion-ios-information-outline"></i>
              <%= t "show" %>
            <% end %>
            <%= link_to edit_product_path(product),
              class: "btn btn-sm btn-success" do %>
              <i class="ion ion-compose"></i> <%= t "edit" %>
            <% end %>
            <%= link_to product_path(product), method: :delete,
              data: {confirm: t("are_you_sure")},
              class: "btn btn-sm btn-danger" do %>
              <i class="ion ion-ios-trash-outline"></i>
              <%= t "delete" %>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
