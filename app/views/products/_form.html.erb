<%= form_for product do |f| %>
  <% if product.errors.any? %>
    <div class="list-group">
      <% product.errors.full_messages.each do |message| %>
        <a class="list-group-item list-group-item-danger">
          <%= message %>
        </a>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= collection_select :product, :category_id, categories, :id, :name,
      {:prompt => "Select one category"}, {:class => "form-control"} %>
  </div>

  <div class="form-group">
    <%= image_tag product.product_image.url(:thumb), class: "img-thumbnail",
      height: 150, width: 150 %>
    <%= f.label :product_image %>
    <%= f.file_field :product_image, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
